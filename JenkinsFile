pipeline {
    agent any

      tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "M2_HOME"
    }

    stages {
        stage('GIT'){
            steps{
                echo 'Getting Project from GIT';
                git branch:"sabri",
                url:'https://github.com/MEJRIWIEM/Groupe_Techers_5SAE5.git'
            }
}
stage('MVN CLEAN'){
    steps{
        sh 'mvn clean'
    }
}
stage('MVN COMPILE'){
    steps{
        sh 'mvn compile'
    }
}
stage('MVN TEST'){
    steps{
        sh 'mvn test'
    }
}
stage("Maven Build") {
            steps {
                script {
                    sh "mvn package -DskipTests=true"
                }
            }
        }
  stage("Publish to Nexus Repository Manager") {
            steps {
                script {
                 def   pom = readMavenPom file: "pom.xml";
                 def nexusRepo= readPomVersion.version.endWith("SNAPSHOT")?"demoapp-snapshot":"demoapp-release"
                     nexusArtifactUploader(
                            nexusVersion: 'nexus3',
                            protocol: 'http',
                            nexusUrl: '192.168.2.25:8081',
                            groupId: 'tn.esprit.rh',
                            version: 'pom.2.0',
                            repository: 'maven-releases',
                            credentialsId: 'nexus',
                            artifacts: [
                                [artifactId: 'achat',
                                classifier: '',
                                file: 'target/achat-1.0-SPANSHOT',
                                type: "jar"],
                                [artifactId: 'pom.achat',
                                classifier: '',
                                file: "pom.xml",
                                type: "pom"]
                            ]
                        );
            
                }
            }
        }
stage('MVN SONARQUBE'){
    steps{
        sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=sabri'
    }
}

    }
}
